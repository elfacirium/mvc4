@model List<StudentModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] ="Read";
}

<a asp-action="Create">Create new Student</a>

<h2>Here is the list of students</h2>

<table style="width:50%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>City</th>
            <th>Graduated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StudentModel student in Model)
        {
        <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Gender</td>
            <td>@student.City</td>
            <td>@student.Graduated</td>
                <td><a asp-action="Update" asp-route-studentId="@student.Id">Update</a></td>
            <td>
                    <form asp-route-studentId="@student.Id" asp-action="Delete" method="post">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>